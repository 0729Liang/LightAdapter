<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/selector_common_click"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/github_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="GitHub"
        android:textColor="#333"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/blog_tv" />

    <TextView
        android:id="@+id/blog_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="Blog"
        android:textColor="#333"
        android:textSize="15sp"
        app:layout_constraintLeft_toRightOf="@id/github_tv"
        app:layout_constraintRight_toLeftOf="@+id/download_tv" />

    <TextView
        android:id="@+id/download_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="Download"
        android:textColor="#333"
        android:textSize="15sp"
        app:layout_constraintLeft_toRightOf="@id/blog_tv"
        app:layout_constraintRight_toRightOf="parent" />


</android.support.constraint.ConstraintLayout>